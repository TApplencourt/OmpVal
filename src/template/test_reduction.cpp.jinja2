bool almost_equal({{T}} x, {{T}} gold, float tol) {
    {% if T_category == "float" %}
        return gold * (1-tol) <= x && x <= gold * ( 1+tol );
    {% elif T_category == "complex" %}
        return abs(gold) * (1-tol) <= abs(x) && abs(x) <= abs(gold) * (1 + tol ); 
    {% endif %}
}

